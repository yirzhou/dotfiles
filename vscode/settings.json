{
  "window.autoDetectColorScheme": true,

  "workbench.colorCustomizations": {
    "[Nord]": {
      "editor.selectionHighlightBackground": "#2e3440",
      "editor.selectionHighlightBorder": "#FFFFFF15",
      "editor.background": "#272c36",
      "editorGutter.background": "#272c36",
      "tab.activeBackground": "#2e3440",
      "tab.inactiveBackground": "#272c36",
      "editorGroupHeader.tabsBackground": "#272c36",
      "editorGroupHeader.tabsBorder": "#2e3440",
      "editorLineNumber.foreground": "#4C566A"
    }
  },

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  "terminal.external.osxExec": "kitty.app",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    },
    "fish": {
      "path": "/opt/homebrew/bin/fish"
    }
  },
  "terminal.integrated.defaultProfile.osx": "fish",

  "files.autoSaveDelay": 2000,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "terminal.integrated.fontFamily": "Iosevka Nerd Font Mono",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.cursorStyle": "underline",
  "explorer.confirmDragAndDrop": false,
  "settingsSync.ignoredExtensions": ["ms-vscode-remote.remote-wsl"],
  "editor.fontSize": 17,
  "editor.fontFamily": "'Iosevka', 'Hack',   'Monaco',  'Hasklig', 'Apple Color Emoji', monospace",
  "editor.fontWeight": "400",
  "editor.lineHeight": 23,
  "editor.minimap.enabled": false,
  "editor.fontLigatures": "'dlig', 'CLIK', 'HSKL'",
  "editor.semanticHighlighting.enabled": false,
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  // "editor.parameterHints.enabled": false,
  // "editor.wordBasedSuggestions": false,

  "launch": {
    "configurations": [],
    "compounds": []
  },

  // JavaScript, TypeScript, HTML, CSS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[latex]": {
    "editor.formatOnSave": true
  },
  // Go
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll.markdownlint": true
    }
  },

  // C/C++
  "clang-format.executable": "/opt/homebrew/bin/clang-format",
  "C_Cpp.intelliSenseEngine": "disabled",
  "cmake.configureOnOpen": false,
  "clangd.path": "/opt/homebrew/opt/llvm/bin/clangd",
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.detectIndentation": false,
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.detectIndentation": false,
    "editor.tabSize": 4
  },

  // Configs for remote ssh
  "remote.SSH.defaultExtensions": [
    "bungcip.better-toml",
    "twxs.cmake",
    "mutantdino.resourcemonitor",
    "ms-python.python"
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latexindent.path": "/Users/zhouyiren/bin/latexindent",
  "latex-workshop.synctex.synctexjs.enabled": true,
  "latex-workshop.message.update.show": false,

  "latex-workshop.latex.tools": [
    {
      "name": "xelatexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-xelatex",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (xelatex)",
      "tools": ["xelatexmk"]
    }
  ],
  "latex-workshop.latex.recipe.default": "latexmk (xelatex)",

  "[rust]": {
    "editor.defaultFormatter": "matklad.rust-analyzer"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.scrollback": 10000,

  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 80
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },

  "markdown.enableExperimentalExtensionApi": true,

  // Python
  "python.formatting.provider": "black",
  "python.sortImports.path": "/opt/miniconda3/bin/isort",
  "python.sortImports.args": ["--profile", "black"],
  "python.formatting.blackArgs": ["--line-length", "79"],
  "python.linting.pylintArgs": ["-j", "8"],

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "workbench.sideBar.location": "right",
  "files.autoSave": "onFocusChange",
  "redhat.telemetry.enabled": false,
  "git.ignoreLegacyWarning": true,
  "clangd.checkUpdates": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.iconTheme": "vscode-icons",
  "files.insertFinalNewline": true,
  "workbench.activityBar.visible": false,
  "python.defaultInterpreterPath": "/Users/zhouyiren/opt/miniconda3/bin/python",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": false,

  "editor.inlayHints.enabled": "off",
  "clang-format.style": "",
  "C_Cpp.clang_format_style": "file:/Users/yirenzhou/.config/clang-format/.clang-format",
  // "clang-format.language.cpp.style": "LLVM",
  // "clang-format.fallbackStyle": "LLVM",

  "editor.cursorBlinking": "phase",

  "leetcode-problem-rating.workspaceFolder": "/Users/yirenzhou/.leetcode",
  "workbench.preferredDarkColorTheme": "Darcula",
  "workbench.colorTheme": "Darcula",
  "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: LLVM, IndentWidth: 4, AllowShortBlocksOnASingleLine: Always, AllowShortIfStatementsOnASingleLine: AllIfsAndElse}",
  "clang-format.language.typescript.fallbackStyle": "",
  "clang-format.language.cpp.style": "{BasedOnStyle: LLVM, IndentWidth: 4, AllowShortBlocksOnASingleLine: Always, AllowShortIfStatementsOnASingleLine: AllIfsAndElse}",
  "workbench.preferredLightColorTheme": "Notepad++ default"
}
