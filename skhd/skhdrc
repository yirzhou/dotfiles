# Open a terminal emulator
shift + ctrl + alt + cmd - t : open -na /Applications/Kitty.app
# Open Brave
shift + ctrl + alt + cmd - b : open -na /Applications/Brave\ Browser.app
# Open Safari
shift + ctrl + alt + cmd - s : open -na /Applications/Safari.app
# Open VS Code
shift + ctrl + alt + cmd - v : open -na /Applications/Visual\ Studio\ Code.app
# Open Mark Text
shift + ctrl + alt + cmd - w : open -na /Applications/Mark\ Text.app
# Open the email client (Spark)
shift + ctrl + alt + cmd - m : open -na /Applications/Spark.app
# Open Amethyst
shift + ctrl + alt + cmd - a : open -na /Applications/Amethyst.app

# For yabai
# Workspaces
shift + ctrl + alt + cmd - d : yabai -m space --destroy
shift + ctrl + alt + cmd - n : yabai -m space --create 
shift + ctrl + alt + cmd - r : yabai -m space --rotate 90

# Focus window
shift + ctrl + alt + cmd - h : yabai -m window --focus west
shift + ctrl + alt + cmd - j : yabai -m window --focus south
shift + ctrl + alt + cmd - k : yabai -m window --focus north
shift + ctrl + alt + cmd - l : yabai -m window --focus east

# Move window
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east

# Focus space
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6

# Restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k gui/(id -u)/homebrew.mxcl.yabai
